{
  "name": "pure-finance",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Gabriel Montes",
  "scripts": {
    "format": "prettier -w .",
    "lint": "eslint .",
    "postinstall": "lerna bootstrap",
    "test": "npx lerna run --stream test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.1.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "env": {
      "es2020": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.js"
        ],
        "env": {
          "mocha": true
        }
      },
      {
        "files": [
          "site/**/*.js"
        ],
        "env": {
          "browser": true
        },
        "extends": [
          "eslint:recommended",
          "plugin:react/recommended",
          "prettier"
        ],
        "parserOptions": {
          "ecmaFeatures": {
            "jsx": true
          },
          "sourceType": "module"
        },
        "rules": {
          "react/prop-types": "off"
        },
        "settings": {
          "react": {
            "version": "17.0"
          }
        }
      }
    ]
  },
  "husky": {
    "pre-commit": "npm run format && npm run lint",
    "pre-push": "npm run test"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  }
}
